{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscriptionId": {
            "type": "String",
            "metadata": {
                "description": "ID de l'abonnement Azure"
            }
        },
        "resourceGroupName": {
            "type": "String",
            "metadata": {
                "description": "Nom du groupe de ressources"
            }
        },
        "name": {
            "type": "String",
            "metadata": {
                "description": "Nom de l'application web"
            }
        },
        "location": {
            "type": "String",
            "defaultValue": "France Central",
            "metadata": {
                "description": "Localisation des ressources Azure"
            }
        },
        "hostingPlanName": {
            "type": "String",
            "metadata": {
                "description": "Nom du plan d'hébergement (App Service Plan)"
            }
        },
        "serverFarmResourceGroup": {
            "type": "String",
            "metadata": {
                "description": "Groupe de ressources du plan d'hébergement"
            }
        },
        "alwaysOn": {
            "type": "Bool",
            "defaultValue": true,
            "metadata": {
                "description": "Maintenir l'application toujours active"
            }
        },
        "ftpsState": {
            "type": "String",
            "defaultValue": "Disabled",
            "allowedValues": [
                "Enabled",
                "FtpsOnly",
                "Disabled"
            ],
            "metadata": {
                "description": "État du service FTP"
            }
        },
        "autoGeneratedDomainNameLabelScope": {
            "type": "String",
            "defaultValue": "TenantReuse",
            "allowedValues": [
                "TenantReuse",
                "SubscriptionReuse",
                "ResourceGroupReuse",
                "NoReuse"
            ],
            "metadata": {
                "description": "Portée de génération automatique du label de nom de domaine"
            }
        },
        "sku": {
            "type": "String",
            "defaultValue": "Basic",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard",
                "Premium",
                "PremiumV2",
                "PremiumV3"
            ],
            "metadata": {
                "description": "Niveau de tarification du plan d'hébergement"
            }
        },
        "skuCode": {
            "type": "String",
            "defaultValue": "B1",
            "metadata": {
                "description": "Code SKU du plan d'hébergement"
            }
        },
        "workerSize": {
            "type": "String",
            "defaultValue": "0",
            "metadata": {
                "description": "Taille du worker (0=Small, 1=Medium, 2=Large)"
            }
        },
        "workerSizeId": {
            "type": "String",
            "defaultValue": "0",
            "metadata": {
                "description": "ID de la taille du worker"
            }
        },
        "numberOfWorkers": {
            "type": "String",
            "defaultValue": "1",
            "metadata": {
                "description": "Nombre de workers"
            }
        },
        "linuxFxVersion": {
            "type": "String",
            "defaultValue": "PYTHON|3.11",
            "metadata": {
                "description": "Version du runtime Linux (ex: PYTHON|3.11, NODE|18-lts, etc.)"
            }
        }
    },
    "variables": {
        "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2022-03-01",
            "name": "[parameters('hostingPlanName')]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {
                "Environment": "Production",
                "Project": "Flask-Incidents-Azure"
            },
            "sku": {
                "Tier": "[parameters('sku')]",
                "Name": "[parameters('skuCode')]"
            },
            "kind": "linux",
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "workerSize": "[parameters('workerSize')]",
                "workerSizeId": "[parameters('workerSizeId')]",
                "numberOfWorkers": "[parameters('numberOfWorkers')]",
                "reserved": true,
                "zoneRedundant": false
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-03-01",
            "name": "[parameters('name')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
            ],
            "tags": {
                "Environment": "Production",
                "Project": "Flask-Incidents-Azure"
            },
            "properties": {
                "name": "[parameters('name')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
                            "value": "false"
                        },
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "1"
                        }
                    ],
                    "linuxFxVersion": "[parameters('linuxFxVersion')]",
                    "alwaysOn": "[parameters('alwaysOn')]",
                    "ftpsState": "[parameters('ftpsState')]",
                    "httpLoggingEnabled": true,
                    "requestTracingEnabled": true,
                    "detailedErrorLoggingEnabled": true
                },
                "serverFarmId": "[variables('serverFarmId')]",
                "clientAffinityEnabled": false,
                "virtualNetworkSubnetId": null,
                "httpsOnly": true,
                "publicNetworkAccess": "Enabled",
                "autoGeneratedDomainNameLabelScope": "[parameters('autoGeneratedDomainNameLabelScope')]"
            },
            "resources": [
                {
                    "type": "basicPublishingCredentialsPolicies",
                    "apiVersion": "2022-09-01",
                    "name": "scm",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('name'))]"
                    ],
                    "properties": {
                        "allow": false
                    }
                },
                {
                    "type": "basicPublishingCredentialsPolicies",
                    "apiVersion": "2022-09-01",
                    "name": "ftp",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('name'))]"
                    ],
                    "properties": {
                        "allow": false
                    }
                }
            ]
        }
    ],
    "outputs": {
        "webAppName": {
            "type": "string",
            "value": "[parameters('name')]"
        },
        "webAppUrl": {
            "type": "string",
            "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('name'))).defaultHostName)]"
        },
        "appServicePlanName": {
            "type": "string",
            "value": "[parameters('hostingPlanName')]"
        },
        "resourceGroupName": {
            "type": "string",
            "value": "[parameters('resourceGroupName')]"
        }
    }
}